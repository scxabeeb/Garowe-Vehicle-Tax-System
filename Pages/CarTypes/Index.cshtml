@page
@model VehicleTax.Web.Pages.CarTypes.IndexModel

<div class="container mt-4">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold mb-0">Car Types</h3>

        <a asp-page="Create"
           class="btn btn-primary">
            Add Car Type
        </a>
    </div>

    <!-- SEARCH -->
    <form method="get" class="row mb-3">
        <div class="col-md-4">
            <input asp-for="Search"
                   class="form-control"
                   placeholder="Search car type..." />
        </div>
        <div class="col-md-2">
            <button class="btn btn-secondary w-100">
                Search
            </button>
        </div>
    </form>

    <!-- TABLE -->
    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-bordered table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width:70px;">#</th>
                        <th>Car Type Name</th>
                        <th class="text-center" style="width:160px;">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                @if (Model.CarTypes.Any())
                {
                    int i = (Model.PageNumber - 1) * 10 + 1;

                    foreach (var item in Model.CarTypes)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@item.Name</td>
                            <td class="text-center">
                                <a asp-page="Edit"
                                   asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-warning me-1">
                                    Edit
                                </a>

                                <a asp-page="Delete"
                                   asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-danger"
                                   onclick="return confirm('Are you sure you want to delete this car type?');">
                                    Delete
                                </a>
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3"
                            class="text-center text-muted">
                            No car types found
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>

    <!-- PAGINATION -->
    @if (Model.TotalPages > 1)
    {
        <nav class="mt-3">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link"
                           href="?pageNumber=@i&search=@Model.Search">
                            @i
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }

</div>
