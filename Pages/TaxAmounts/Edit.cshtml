@page "{id:int}"
@model VehicleTax.Web.Pages.TaxAmounts.EditModel
@{
    ViewData["Title"] = "Edit Tax Amount";
}

<div class="row justify-content-center">
    <div class="col-md-6">

        <!-- PAGE TITLE -->
        <div class="mb-4 text-center">
            <h3 class="fw-bold">Edit Tax Amount</h3>
            <p class="text-muted">
                Update tax amount by car type and movement
            </p>
        </div>

        <!-- FORM CARD -->
        <form method="post" class="card shadow-sm border-0">

            <div class="card-body p-4">

                <input type="hidden" asp-for="Tax.Id" />

                <div class="mb-3">
                    <label class="form-label fw-semibold">
                        Car Type
                    </label>

                    <select asp-for="Tax.CarTypeId"
                            asp-items="Model.CarTypes"
                            class="form-select">
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">
                        Movement
                    </label>

                    <select asp-for="Tax.MovementId"
                            asp-items="Model.Movements"
                            class="form-select">
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">
                        Amount
                    </label>

                    <input asp-for="Tax.Amount"
                           type="number"
                           step="0.01"
                           class="form-control"
                           required />
                </div>

            </div>

            <!-- FOOTER -->
            <div class="card-footer bg-light text-end">

                <a asp-page="Index"
                   class="btn btn-outline-secondary me-2">
                    Cancel
                </a>

                <button type="submit"
                        class="btn btn-warning px-4">
                    Save Changes
                </button>

            </div>

        </form>

    </div>
</div>
