@page
@model VehicleTax.Web.Pages.TaxAmounts.CreateModel

<div class="row justify-content-center">
    <div class="col-lg-7">

        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0 d-flex align-items-center gap-2">
                    <i class="bi bi-cash-coin"></i>
                    Register Tax Amount
                </h5>
            </div>

            <div class="card-body">

                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                <form method="post">

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Car Type</label>
                        <select asp-for="Tax.CarTypeId"
                                asp-items="Model.CarTypes"
                                class="form-select">
                            <option value="">-- Select Car Type --</option>
                        </select>
                        <span asp-validation-for="Tax.CarTypeId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Movement</label>
                        <select asp-for="Tax.MovementId"
                                asp-items="Model.Movements"
                                class="form-select">
                            <option value="">-- Select Movement --</option>
                        </select>
                        <span asp-validation-for="Tax.MovementId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Amount</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-currency-dollar"></i>
                            </span>
                            <input asp-for="Tax.Amount"
                                   type="number"
                                   step="0.01"
                                   class="form-control" />
                        </div>
                        <span asp-validation-for="Tax.Amount" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">

                        <a asp-page="/TaxAmounts/Index"
                           class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i>
                            Back
                        </a>

                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check2-circle"></i>
                            Save
                        </button>

                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
