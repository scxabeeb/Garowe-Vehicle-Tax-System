@page "{id:int}"
@model VehicleTax.Web.Pages.TaxAmounts.DeleteModel
@{
    ViewData["Title"] = "Delete Tax Amount";
}

<div class="row justify-content-center">
    <div class="col-md-6">

        <!-- PAGE TITLE -->
        <div class="mb-4 text-center">
            <h3 class="fw-bold text-danger">Delete Tax Amount</h3>
            <p class="text-muted">
                This action cannot be undone
            </p>
        </div>

        <!-- CONFIRM CARD -->
        <form method="post" class="card shadow-sm border-0">

            <div class="card-body p-4">

                <div class="alert alert-warning">
                    Are you sure you want to delete this tax amount?
                </div>

                <p><strong>Car Type:</strong> @Model.Tax.CarType?.Name</p>
                <p><strong>Movement:</strong> @Model.Tax.Movement?.Name</p>
                <p><strong>Amount:</strong> @Model.Tax.Amount</p>

            </div>

            <div class="card-footer bg-light text-end">

                <a asp-page="Index"
                   class="btn btn-outline-secondary me-2">
                    Cancel
                </a>

                <button type="submit"
                        class="btn btn-danger px-4">
                    Yes, Delete
                </button>

            </div>

        </form>

    </div>
</div>
