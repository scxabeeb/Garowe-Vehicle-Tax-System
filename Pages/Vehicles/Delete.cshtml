@page "{id:int}"
@model VehicleTax.Web.Pages.Vehicles.DeleteModel

<h3 class="text-danger">Delete Vehicle</h3>

<div class="alert alert-warning">
    Are you sure you want to delete this vehicle?
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="card p-3 mb-3">
    <p><strong>Plate:</strong> @Model.Vehicle.PlateNumber</p>
    <p><strong>Owner:</strong> @Model.Vehicle.OwnerName</p>
    <p><strong>Car Type:</strong> @Model.Vehicle.CarType?.Name</p>
</div>

<form method="post">
    <button class="btn btn-danger">Yes, Delete</button>
    <a asp-page="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
