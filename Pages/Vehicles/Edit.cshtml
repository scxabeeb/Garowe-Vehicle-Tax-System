@page "{id:int}"
@model VehicleTax.Web.Pages.Vehicles.EditModel
@{
    ViewData["Title"] = "Edit Vehicle";
}

<div class="container mt-4">

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Edit Vehicle</h5>
                </div>

                <div class="card-body">

                    <form method="post">
                        <input type="hidden" asp-for="Vehicle.Id" />

                        <div asp-validation-summary="All"
                             class="alert alert-danger"
                             id="validationSummary"></div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Plate Number</label>

                            @if (Model.HasPayments)
                            {
                                <input asp-for="Vehicle.PlateNumber"
                                       class="form-control"
                                       readonly />

                                <small class="text-danger">
                                    Plate number is locked because this vehicle has payments.
                                </small>
                            }
                            else
                            {
                                <input asp-for="Vehicle.PlateNumber"
                                       class="form-control"
                                       placeholder="e.g. GL-1234"
                                       required />
                            }
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Owner Name</label>
                            <input asp-for="Vehicle.OwnerName"
                                   class="form-control"
                                   placeholder="Owner full name"
                                   required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Mobile</label>
                            <input asp-for="Vehicle.Mobile"
                                   class="form-control"
                                   placeholder="2526xxxxxxx" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold">Car Type</label>
                            <select asp-for="Vehicle.CarTypeId"
                                    asp-items="Model.CarTypes"
                                    class="form-select">
                            </select>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-outline-secondary">
                                ‚Üê Cancel
                            </a>

                            <button type="submit" class="btn btn-primary px-4">
                                üíæ Save Changes
                            </button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
