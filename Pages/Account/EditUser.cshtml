@page "{id:int}"
@model VehicleTax.Web.Pages.Account.EditUserModel

<h3 class="mb-3">Edit User</h3>

<form method="post" class="card p-4 shadow-sm">

    <input type="hidden" asp-for="EditUser.Id" />

    <div class="mb-3">
        <label class="form-label">Username</label>
        <input asp-for="EditUser.Username" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <input asp-for="EditUser.Password" type="password" class="form-control" />
        <small class="text-muted">Leave blank to keep old password</small>
    </div>

    <div class="mb-3">
        <label class="form-label">Role</label>
        <select asp-for="EditUser.Role" class="form-select">
            <option>Admin</option>
            <option>Collector</option>
            <option>Viewer</option>
            <option>Auditor</option>
        </select>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success">
            Save
        </button>

        <a asp-page="/Account/Users" class="btn btn-secondary">
            Cancel
        </a>
    </div>

</form>
