@page
@model VehicleTax.Web.Pages.Account.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="container mt-4" style="max-width:500px;">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h4 class="fw-bold text-primary mb-3">
                <i class="bi bi-key"></i> Change Password
            </h4>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }

            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Current Password</label>
                    <input asp-for="Input.CurrentPassword" class="form-control" type="password" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">New Password</label>
                    <input asp-for="Input.NewPassword" class="form-control" type="password" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Confirm New Password</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" type="password" required />
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-check-circle"></i> Update Password
                </button>
            </form>
        </div>
    </div>
</div>
