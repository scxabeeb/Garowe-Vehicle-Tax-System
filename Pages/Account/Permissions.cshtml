@page "{id:int}"
@model VehicleTax.Web.Pages.Account.PermissionsModel

<h4 class="mb-3">
    Permissions for <span class="text-primary">@Model.UserInfo.Username</span>
</h4>

<a asp-page="/Account/Users" class="btn btn-secondary mb-3">
    ‚Üê Back to Users
</a>

<form method="post" class="card p-4 shadow">

    <div class="row">
        @foreach (var p in Model.AllPermissions)
        {
            <div class="col-md-4">
                <div class="form-check mb-2">
                    <input class="form-check-input"
                           type="checkbox"
                           name="SelectedPermissions"
                           value="@p"
                           id="@p"
                           @(Model.SelectedPermissions.Contains(p) ? "checked" : "") />

                    <label class="form-check-label" for="@p">
                        @p
                    </label>
                </div>
            </div>
        }
    </div>

    <hr />

    <button class="btn btn-success">
        <i class="bi bi-save"></i> Save Permissions
    </button>

</form>
