@page
@model VehicleTax.Web.Pages.Reports.PaymentsModel

<h3 class="mb-3">Payments Report</h3>

<form method="get" class="card p-3 mb-4">
    <div class="row g-3">

        <div class="col-md-3">
            <label>From Date</label>
            <input type="date" asp-for="FromDate" class="form-control" />
        </div>

        <div class="col-md-3">
            <label>To Date</label>
            <input type="date" asp-for="ToDate" class="form-control" />
        </div>

        <div class="col-md-3">
            <label>Plate</label>
            <input asp-for="PlateNumber" class="form-control" />
        </div>

        <div class="col-md-3">
            <label>Car Type</label>
            <select asp-for="CarTypeId"
                    asp-items="Model.CarTypes"
                    class="form-select">
                <option value="">All</option>
            </select>
        </div>

        <div class="col-md-12">
            <button class="btn btn-success w-100">Filter</button>
        </div>

    </div>
</form>

<div class="alert alert-info">
    <strong>Total Amount:</strong> @Model.TotalAmount
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Plate</th>
            <th>Owner</th>
            <th>Car Type</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var p in Model.Payments)
    {
        <tr>
            <td>@p.PaymentDate.ToString("yyyy-MM-dd")</td>
            <td>@p.Vehicle?.PlateNumber</td>
            <td>@p.Vehicle?.OwnerName</td>
            <td>@p.Vehicle?.CarType?.Name</td>
            <td>@p.AmountPaid</td>
        </tr>
    }
    </tbody>
</table>
