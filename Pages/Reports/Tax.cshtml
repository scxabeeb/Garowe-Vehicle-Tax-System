@page
@model VehicleTax.Web.Pages.Reports.TaxModel
@{
    ViewData["Title"] = "Tax Report";
}

<h3 class="fw-bold mb-4">Tax Report</h3>

<form method="get" class="card p-3 shadow-sm mb-4">
    <div class="row g-3">
        <div class="col-md-3">
            <label class="form-label">From Date</label>
            <input type="date" asp-for="FromDate" class="form-control" />
        </div>

        <div class="col-md-3">
            <label class="form-label">To Date</label>
            <input type="date" asp-for="ToDate" class="form-control" />
        </div>

        <div class="col-md-2">
            <label class="form-label">Plate No</label>
            <input asp-for="PlateNumber" class="form-control" />
        </div>

        <div class="col-md-2">
            <label class="form-label">Car Type</label>
            <select asp-for="CarTypeId" asp-items="Model.CarTypes" class="form-select">
                <option value="">All</option>
            </select>
        </div>

        <div class="col-md-2">
            <label class="form-label">Collector</label>
            <select asp-for="CollectorId" asp-items="Model.Collectors" class="form-select">
                <option value="">All</option>
            </select>
        </div>

        <div class="col-md-12 text-end">
            <button class="btn btn-primary mt-2">Search</button>
            <a asp-page="./Tax" class="btn btn-secondary mt-2">Reset</a>
        </div>
    </div>
</form>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <h6>Total Amount</h6>
                <h4>@Model.TotalAmount.ToString("N2")</h4>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <h6>Total Payments</h6>
                <h4>@Model.TotalPayments</h4>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <h6>Total Vehicles</h6>
                <h4>@Model.TotalVehicles</h4>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-end mb-2">
    <a asp-page-handler="ExportExcel" class="btn btn-success btn-sm me-2">
        Export Excel
    </a>
    <a asp-page-handler="ExportPdf" class="btn btn-danger btn-sm">
        Export PDF
    </a>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Date & Time</th>
            <th>Plate No</th>
            <th>Car Type</th>
            <th>Amount (USD)</th>
            <th>Collector</th>
            <th>Reference</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.TaxReports.Any())
        {
            <tr>
                <td colspan="6" class="text-center text-muted">
                    No tax records found for the selected filters.
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model.TaxReports)
            {
                <tr>
                    <td>@item.Date.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@item.PlateNumber</td>
                    <td>@item.CarType</td>
                    <td>@item.Amount.ToString("N2")</td>
                    <td>@item.Collector</td>
                    <td>@item.Reference</td>
                </tr>
            }
        }
    </tbody>
</table>
