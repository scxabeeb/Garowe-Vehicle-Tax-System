@page
@model VehicleTax.Web.Pages.Reports.VehiclesModel

<h3 class="mb-3">Vehicle Report</h3>

<form method="get" class="card p-3 mb-4">
    <div class="row g-3">

        <div class="col-md-3">
            <label>Plate</label>
            <input asp-for="PlateNumber" class="form-control" />
        </div>

        <div class="col-md-3">
            <label>Owner</label>
            <input asp-for="OwnerName" class="form-control" />
        </div>

        <div class="col-md-3">
            <label>Car Type</label>
            <select asp-for="CarTypeId"
                    asp-items="Model.CarTypes"
                    class="form-select">
                <option value="">All</option>
            </select>
        </div>

        <div class="col-md-3 d-flex align-items-end">
            <button class="btn btn-primary w-100">Filter</button>
        </div>

    </div>
</form>

<div class="alert alert-info">
    <strong>Total Vehicles:</strong> @Model.Vehicles.Count
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Plate</th>
            <th>Owner</th>
            <th>Car Type</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var v in Model.Vehicles)
    {
        <tr>
            <td>@v.PlateNumber</td>
            <td>@v.OwnerName</td>
            <td>@v.CarType?.Name</td>
        </tr>
    }
    </tbody>
</table>
