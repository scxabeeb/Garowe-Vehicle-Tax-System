@page
@model VehicleTax.Web.Pages.Movements.CreateModel
@{
    ViewData["Title"] = "Add Movement";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="text-center mb-4">
                <h3 class="fw-bold mb-1">Add Movement</h3>
                <p class="text-muted small">
                    Create one movement for multiple car types
                </p>
            </div>

            <form method="post" class="card shadow-sm border-0">
                <div class="card-body p-4">

                    <!-- Movement Name -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Movement Name</label>
                        <input asp-for="MovementName"
                               class="form-control"
                               placeholder="e.g. Passing, Staying"
                               required />
                        <span asp-validation-for="MovementName"
                              class="text-danger small"></span>
                    </div>

                    <!-- Car Types (CHECKBOX LIST) -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">
                            Car Types (Select one or more)
                        </label>

                        <div class="border rounded p-2" style="max-height:200px; overflow-y:auto;">
                            @foreach (var c in Model.CarTypes)
                            {
                                <div class="form-check">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="SelectedCarTypeIds"
                                           value="@c.Value"
                                           id="ct_@c.Value" />

                                    <label class="form-check-label" for="ct_@c.Value">
                                        @c.Text
                                    </label>
                                </div>
                            }
                        </div>

                        <span asp-validation-for="SelectedCarTypeIds"
                              class="text-danger small"></span>
                    </div>

                </div>

                <div class="card-footer bg-light text-end">
                    <a asp-page="Index" class="btn btn-outline-secondary me-2">
                        Back
                    </a>

                    <button type="submit" class="btn btn-success px-4">
                        Save
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
