@page
@model VehicleTax.Web.Pages.Movements.CreateModel
@{
    ViewData["Title"] = "Add Movement";
}

<div class="container mt-4">

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <!-- PAGE HEADER -->
            <div class="text-center mb-4">
                <h3 class="fw-bold mb-1">Add Movement</h3>
                <p class="text-muted small">
                    Create a new vehicle movement type
                </p>
            </div>

            <!-- FORM CARD -->
            <form method="post" class="card shadow-sm border-0">

                <div class="card-body p-4">

                    <div class="mb-3">
                        <label class="form-label fw-semibold">
                            Movement Name
                        </label>

                        <input asp-for="Movement.Name"
                               class="form-control"
                               placeholder="e.g. Passing, Staying"
                               required />

                        <span asp-validation-for="Movement.Name"
                              class="text-danger small"></span>
                    </div>

                </div>

                <!-- FOOTER -->
                <div class="card-footer bg-light text-end">
                    <a asp-page="Index"
                       class="btn btn-outline-secondary me-2">
                        Back
                    </a>

                    <button type="submit"
                            class="btn btn-success px-4">
                        Save
                    </button>
                </div>

            </form>

        </div>
    </div>

</div>
