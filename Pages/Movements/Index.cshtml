@page
@model VehicleTax.Web.Pages.Movements.IndexModel
@{
    ViewData["Title"] = "Movements";
}

<div class="container mt-4">

    <!-- SUCCESS ALERT -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold mb-0">Movement Types</h3>
        <a asp-page="Create" class="btn btn-primary">
            Add Movement
        </a>
    </div>

    <!-- SEARCH + SORT -->
    <form method="get" class="row g-2 mb-3">
        <div class="col-md-4">
            <input asp-for="Search"
                   class="form-control"
                   placeholder="Search movement..." />
        </div>

        <div class="col-md-3">
            <button class="btn btn-secondary w-100">
                Search
            </button>
        </div>

        <div class="col-md-3">
            <a class="btn btn-outline-secondary w-100"
               href="?search=@Model.Search&sort=@(Model.Sort == "asc" ? "desc" : "asc")">
                Sort @(Model.Sort == "asc" ? "Z–A" : "A–Z")
            </a>
        </div>
    </form>

    <!-- TABLE -->
    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width:70px">#</th>
                        <th>Movement Name</th>
                        <th>Car Type</th>
                        <th class="text-center" style="width:180px">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                @if (Model.Movements.Any())
                {
                    int i = (Model.PageNumber - 1) * Model.PageSize + 1;

                    foreach (var item in Model.Movements)
                    {
                        <tr>
                            <td>@i</td>
                            <td class="fw-semibold">@item.Name</td>
                            <td>
                                @if (item.CarType != null)
                                {
                                    <span class="badge bg-info text-dark">
                                        @item.CarType.Name
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">No Car Type</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-page="Edit"
                                   asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-warning me-1">
                                    Edit
                                </a>
                                <a asp-page="Delete"
                                   asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-danger">
                                    Delete
                                </a>
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted">
                            No movements found
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>

    <!-- PAGINATION -->
    @if (Model.TotalPages > 1)
    {
        <nav class="mt-3">
            <ul class="pagination justify-content-center">
                @for (int p = 1; p <= Model.TotalPages; p++)
                {
                    <li class="page-item @(p == Model.PageNumber ? "active" : "")">
                        <a class="page-link"
                           href="?pageNumber=@p&search=@Model.Search&sort=@Model.Sort">
                            @p
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }

</div>
